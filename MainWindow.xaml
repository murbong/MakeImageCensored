<Window x:Class="MakeImageCensored.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakeImageCensored"
        mc:Ignorable="d"
        Title="최신기술의 최신화" Height="518" Width="580" KeyDown="Window_KeyDown">
    <Viewbox>
        <StackPanel>
            <Border x:Name="CanvasBorder" BorderBrush="Black" BorderThickness="0">
                <InkCanvas x:Name="inkCanvas" Margin="0,0,0,0"/>
            </Border>
            <DockPanel HorizontalAlignment="Center">
                <Button Width="70" Height="20" Content="열기" Click="Btn_Open"/>
                <Button Width="70" Height="20" Content="모두 지우기" Click="Btn_Clear"/>
                <Button Width="70" Height="20" Content="변환하기" Click="Btn_Process"/>
                <TextBox Height="23" TextWrapping="Wrap" Text="0.0095" Width="60" TextChanged="TextBox_TextChanged"/>
            </DockPanel>
            
        </StackPanel>
    </Viewbox>
</Window>
